@import '../styles/global.wxss';

.mui-button {
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  margin: 0;
  min-width: 64px;
  box-sizing: border-box;
  box-shadow: 0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12);
  transition: background-color 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,border 250ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
  font-weight: 500;
  line-height: 1.75;
  letter-spacing: 0.4px;
  text-transform: uppercase;  
  border: 0;
  border-radius: 4px;
  outline: 0;
  user-select: none;
  vertical-align: middle;
  text-decoration: none;
  appearance: none;
  -webkit-tap-highlight-color: transparent;

  &::after {
    border: 0;
    border-radius: 0;
  }

  &.mui-button-hover {
    box-shadow: 0px 2px 4px -1px rgba(0,0,0,0.2), 0px 4px 5px 0px rgba(0,0,0,0.14), 0px 1px 10px 0px rgba(0,0,0,0.12);
  }

  &.mui-button-default {
    color: rgba(0, 0, 0, 0.87);
    background-color: #e0e0e0;
    &.mui-button-hover {
      background-color: #d5d5d5;
    }
    &.mui-button-outlined {
      background-color: transparent;
      border: 1px solid rgba(0, 0, 0, 0.23);
      box-shadow: none;
      &.mui-button-hover {
        text-decoration: none;
        background-color: rgba(0, 0, 0, 0.08);
      }
    }
    &.mui-button-text {
      background-color: transparent;
      border: 0;
      box-shadow: none;
      &.mui-button-hover {
        text-decoration: none;
        background-color: rgba(0, 0, 0, 0.08);
      }
    }
  }

  &.mui-button-primary {
    color: #fff;
    background-color: #1976d2;
    &.mui-button-hover {
      background-color: rgb(17, 82, 147);
    }
    &.mui-button-outlined {
      background-color: transparent;
      color: #1976d2;
      border: 1px solid rgba(25, 118, 210, 0.5);
      box-shadow: none;
      &.mui-button-hover {
        border: 1px solid #1976d2;
        background-color: rgba(25, 118, 210, 0.08);
      }
    }
    &.mui-button-text {
      background-color: transparent;
      color: #1976d2;
      border: 0;
      box-shadow: none;
      &.mui-button-hover {
        text-decoration: none;
        background-color: rgba(25, 118, 210, 0.08);
      }
    }
  }

  &.mui-button-secondary {
    color: #fff;
    background-color: #dc004e;
    &.mui-button-hover {
      background-color: rgb(154, 0, 54);
    }
    &.mui-button-outlined {
      background-color: transparent;
      color: #dc004e;
      border: 1px solid rgba(220, 0, 78, 0.5);
      box-shadow: none;
      &.mui-button-hover {
        border: 1px solid rgb(220, 0, 78);
        background-color: rgba(220, 0, 78, 0.08);
      }
    }
    &.mui-button-text {
      background-color: transparent;
      color: #dc004e;
      border: 0;
      box-shadow: none;
      &.mui-button-hover {
        text-decoration: none;
        background-color: rgba(220, 0, 78, 0.08);
      }
    }
  }

  &.mui-button-medium {
    padding: 6px 16px;
    font-size: 15px;
    &.mui-button-circle {
      height: 48px;
      width: 48px;
    }
  }

  &.mui-button-small {
    padding: 4px 10px;
    font-size: 13px;
    &.mui-button-circle {
      height: 40px;
      width: 40px;
    }
  }

  &.mui-button-large {
    padding: 8px 22px;
    font-size: 16px;
    &.mui-button-circle {
      height: 56px;
      width: 56px;
    }
  }

  &.mui-button-circle {
    padding: 0;
    border-radius: 50%;
    min-width: 0;
    min-height: 36px;
  }

  .mui-button-label {
    width: 100%;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    line-height: 1;
    &::after, &::before {
      box-sizing: inherit;
    }
  }
}
