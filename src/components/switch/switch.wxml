<view
  class="mui mui-switch {{_checkedClass}} disabled-{{disabled}} {{muiClasses}}"
  style="{{mStyle}}"
  capture-bind:tap="_CheckControll"
>
  <view class="switch-root">
    <mui-button class="_mui-inner-button" color="{{color}}" disabled="{{disabled}}" disableRipple="{{disableRipple}}" hoverStopPropagation mClass="mui-icon-button edge-{{edge}}" mStyle="padding: {{size === 'small' ? 4 : 9}}px;" rippleColor="{{rippleColor}}" shape="circle" variant="text">
      <mui-icon name="{{_currentIcon}}" mClass="check-icon switch-icon" />
    </mui-button>
    <view class="switch-track" />
  </view>
  <slot />
</view>
