<picker
  custom-item="{{customItem}}"
  disabled="{{disabled}}"
  end="{{end}}"
  fields="{{fields}}"
  headerText="{{headerText}}"
  value="{{value}}"
  mode="{{mode}}"
  range="{{range}}"
  range-key="{{rangeKey}}"
  start="{{start}}"
  style="{{fullWidth ? '' : 'display: inline-flex;'}}"
  bindchange="_change"
  bindcancel="_cancel"
  bindtap="_inputFocus"
>
  <mui-input
    color="{{color}}"
    disabled="{{disabled}}"
    disableDefaultPadding="{{disableDefaultPadding}}"
    disable-underline="{{disableUnderline}}"
    error="{{error}}"
    full-width="{{fullWidth}}"
    class="_mui-select-input"
    input-disabled
    mClass="mui-select-input {{mClass}}"
    mStyle="{{mStyle}}"
    margin="{{margin}}"
    name="{{name}}"
    placeholder="{{placeholder}}"
    placeholderStyle="{{placeholderStyle}}"
    placeholderClass="{{placeholderClass}}"
    required="{{required}}"
    value="{{_display}}"
    variant="{{variant}}"
  >
    <mui-input-adornment mClass="select-arrow" slot="endAdornment" position="end">
      <mui-icon name="arrow-{{_focus ? 'up' : 'down'}}-2" mStyle="font-size: 12px;" />
    </mui-input-adornment>
  </mui-input>
</picker>