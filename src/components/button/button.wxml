<mui-button-base
  app-parameter="{{appParameter}}"
  component="button"
  center-ripple="{{(shape === 'circle' && variant === 'text')}}"
  disabled="{{disabled || loading}}"
  disableRipple="{{disableRipple}}"
  hover-class="{{(disabled || loading) ? '' : (hoverClass ? hoverClass : 'mui-button-hover')}}"
  hover-stop-propagation="{{hoverStopPropagation}}"
  hover-start-time="{{hoverStartTime}}"
  hover-stay-time="{{hoverStayTime}}"
  mClass="mui-button disable-elevation-{{disableElevation}} mui-shape-{{shape}} {{muiClasses}}"
  mStyle="{{fullWidth ? 'width: 100%;' : ''}}{{_groupStyle}}{{mStyle}}"
  form-type="{{formType}}"
  lang="{{lang}}"
  open-type="{{openType}}"
  ripple-color="{{rippleColor}}"
  session-from="{{sessionFrom}}"
  send-message-title="{{sendMessageTitle}}"
  send-message-path="{{sendMessagePath}}"
  send-message-img="{{sendMessageImg}}"
  show-message-card="{{showMessageCard}}"
>
  <mui-icon wx:if="{{loading}}" mClass="mui-button-loading" name="progress-circle" spin />
  <slot></slot>
  <mui-icon
    wx:if="{{icon}}"
    color="{{iconColor}}"
    name="{{icon}}"
    mClass="icon-in-button icon-position-{{iconPosition}}"
    size="{{iconSize}}"
    spin="{{iconSpin}}"
  />
</mui-button-base>