<view
  class="mui mui-tabs mui-tabs-text-color-{{textColor}} mui-tabs-variant-{{variant}} {{mClass}}"
  style="{{mStyle}}"
>
  <mui-button-base
    wx:if="{{variant === 'scrollable'}}"
    bind:tap="_MoveToLeft"
    class="mui-tabs-scroll-button"
    component="button"
    disabled="{{_positionAtStart}}"
  >
    <mui-icon name="arrow-left-2" size="20" />
  </mui-button-base>
  <view class="mui-tabs-scroller mui-tabs-fixed">
    <view class="mui-tabs-flex-container centered-{{centered}}" style="transform: translateX({{_translateX}}px)">
      <slot />
      <view class="mui-tabs-indicator indicator-color-{{indicatorColor}}" style="{{_indicatorStyle}}" />
    </view>
  </view>
  <mui-button-base
    wx:if="{{variant === 'scrollable'}}"
    bind:tap="_MoveToRight"
    class="mui-tabs-scroll-button"
    component="button"
    disabled="{{_positionAtEnd}}"
  >
    <mui-icon name="arrow-right-2" size="20" />
  </mui-button-base>
</view>