<block wx:if="{{type === 'circular'}}">
  <mui-icon
    color="{{progressColor}}"
    m-class="mui mui-color-{{color}} {{variant !== 'indeterminate' ? 'adjust-offset' : ''}} {{mClass}}"
    m-style="{{mStyle}}"
    name="progress-circle"
    progress-props="{{_progressPropsForIcon}}"
    size="{{size}}"
    spin="{{variant === 'indeterminate'}}"
  />
</block>
<block wx:elif="{{type === 'linear'}}">
  <view
    class="mui mui-progress-root progress-color-{{color}} {{mClass}}"
    style="{{mStyle}}"
  >
    <view class="mui progress-bar mui-color-{{color}} mui-variant-{{variant}}"></view>
    <view class="mui progress-bar progress-bar2 mui-color-{{color}} mui-variant-{{variant}}"></view>
  </view>
</block>