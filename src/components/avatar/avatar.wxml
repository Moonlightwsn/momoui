<view
  class="mui mui-avatar avatar-color-default avatar-variant-{{variant}} {{src ? 'mui-avatar-img' : ''}} {{icon ? 'mui-avatar-icon' : ''}} {{mClass}}"
  style="{{_groupStyles}}{{mStyle}}"
>
  <mui-icon
    wx:if="{{src || icon}}"
    src="{{src}}"
    mClass="{{icon && icon.class}}"
    mStyle="{{icon && icon.style}}"
    name="{{icon.name || icon}}"
    color="{{iconColor || icon.color}}"
    size="{{src ? null : (iconSize || icon.size)}}"
  />
  <slot wx:else />
</view>