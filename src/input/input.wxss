.mui-input-root {
  display: inline-block;
  position: relative;
  .mui-input-label {
    position: absolute;
    top: 0;
    left: 0;
    color: rgba(0, 0, 0, 0.54);
    &.mui-input-label-filled {
      &.mui-input-label-normal {
        transform: translate(12px, 20px);
      }
      &.mui-input-label-shrink {
        transform: translate(12px, 10px);
      }
    }
    &.mui-input-label-normal {
      transform: translate(0, 23px);
      transition: color 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms,transform 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
    }
    &.mui-input-label-shrink {
      transform: translate(0, 1.5px);
      transform-origin: top left;
      transition: color 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms,transform 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
    }
    .mui-input-label-typography-normal {
      font-size: 16px;
      height: 16px;
      line-height: 16px;
      min-height: 16px;
      transform: scale(1);
      transition: color 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms,transform 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
    }
    .mui-input-label-typography-shrink {
      transform: scale(0.75);
      transform-origin: top left;
      transition: color 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms,transform 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
    }
  }
  .mui-input-help {
    color: rgba(0, 0, 0, 0.54);
  }
  &.mui-input-root-focus {
    .mui-input-wrapper{
      &::after {
        transform: scaleX(1);
      }
    }
    &.mui-input-root-default {
      .mui-input-label {
        color: rgba(0, 0, 0, 0.87);
      }
      .mui-input-wrapper {
        &::after {
          border-bottom-color: rgba(0, 0, 0, 0.87);
        }
      }
    }
    &.mui-input-root-primary {
      .mui-input-label {
        color: #1976d2;
      }
    }
    &.mui-input-root-secondary {
      .mui-input-label {
        color: #f44336;
      }
      .mui-input-wrapper {
        &::after {
          border-bottom-color: #f44336;
        }
      }
    }
    &.mui-input-root-wechat {
      .mui-input-label {
        color: #1aad19;
      }
      .mui-input-wrapper {
        &::after {
          border-bottom-color: #1aad19;
        }
      }
    }
  }
  &.mui-input-root-disabled {
    .mui-input-wrapper {
      &::before {
        border-bottom-style: dotted;
      }
    }
  }
  &.mui-input-root-error {
    .mui-input-wrapper {
      &::before {
        border-bottom: 2px solid #f44336;
      }
    }
    .mui-input-label {
      color: #f44336
    }
    .mui-input-help {
      color: #f44336;
    }
  }
  .mui-input-wrapper {
    position: relative;
    color: rgba(0, 0, 0, 0.87);
    cursor: text;
    display: inline-flex;
    align-items: flex-end;
    width: 100%;
    position: relative;
    font-size: 16px;
    font-weight: 400;
    box-sizing: border-box;
    height: 32px;
    font-family: "Roboto", "Helvetica", "Arial", sans-serif;
    letter-spacing: 0.14994px;
    &.mui-input-wrapper-with-label {
      height: 48px;
    }
    &.mui-input-wrapper-with-filled {
      background-color:rgba(0,0,0,0.09);
      border-radius:4px;
      height: 56px;
      padding: 0 12px;
    }
    &::before {
      left: 0;
      right: 0;
      bottom: 0;
      content: "\00a0";
      position: absolute;
      transition: border-bottom-color 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
      border-bottom: 1px solid rgba(0, 0, 0, 0.42);
      pointer-events: none;
    }
    &::after {
      left: 0;
      right: 0;
      bottom: 0;
      content: "";
      position: absolute;
      transform: scaleX(0);
      transition: transform 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
      border-bottom: 2px solid #1976d2;
      pointer-events: none;
    }
    .mui-input-start-icon-normal {
      padding-bottom: 4px;
      padding-right: 8px;
    }
    .mui-input-start-icon-filled {
      padding-bottom: 7px;
      padding-right: 8px;
    }
    .mui-input {
      width: 100%;
      border: 0;
      display: inline-block;
      padding: 6px 0 7px;
      height: 19px;
      min-height: 19px;
      line-height: 19px;
      box-sizing: content-box;
      word-spacing: normal;
      margin: 0;
      min-width: 0;
      background: none;
      animation-name: MuiInputBase-keyframes-auto-fill-cancel;
      -webkit-tap-highlight-color: transparent;
      &.mui-input-with-label {
        padding: 22px 0 7px;
      }
      &.mui-input-with-filled {
        padding: 27px 0 10px;
      }
    }
  }
}