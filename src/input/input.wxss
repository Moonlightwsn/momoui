.mui-input-root {
  display: inline-block;
  position: relative;
  .mui-input-label {
    position: absolute;
    top: 0;
    left: 0;
    height: 16px;
    line-height: 16px;
    color: rgba(0, 0, 0, 0.54);
  }
  .mui-input-help {
    color: rgba(0, 0, 0, 0.54);
  }
  &.mui-input-root-focus {
    .mui-input-wrapper{
      &::after {
        transform: scaleX(1);
      }
    }
    &.mui-input-root-default {
      .mui-input-label {
        color: rgba(0, 0, 0, 0.87);
      }
      .mui-input-wrapper {
        &::after {
          border-bottom-color: rgba(0, 0, 0, 0.87);
        }
      }
    }
    &.mui-input-root-primary {
      .mui-input-label {
        color: #1976d2;
      }
    }
    &.mui-input-root-secondary {
      .mui-input-label {
        color: #f44336;
      }
      .mui-input-wrapper {
        &::after {
          border-bottom-color: #f44336;
        }
      }
    }
    &.mui-input-root-wechat {
      .mui-input-label {
        color: #1aad19;
      }
      .mui-input-wrapper {
        &::after {
          border-bottom-color: #1aad19;
        }
      }
    }
  }
  &.mui-input-root-disabled {
    .mui-input-wrapper {
      &::before {
        border-bottom-style: dotted;
      }
    }
  }
  &.mui-input-root-error {
    .mui-input-wrapper {
      &::before {
        border-bottom: 2px solid #f44336;
      }
    }
    .mui-input-label {
      color: #f44336
    }
    .mui-input-help {
      color: #f44336;
    }
  }
  .mui-input-wrapper {
    position: relative;
    color: rgba(0, 0, 0, 0.87);
    cursor: text;
    display: inline-block;
    width: 100%;
    position: relative;
    font-size: 16px;
    font-weight: 400;
    box-sizing: border-box;
    align-items: center;
    font-family: "Roboto", "Helvetica", "Arial", sans-serif;
    letter-spacing: 0.14994px;
    &::before {
      left: 0;
      right: 0;
      bottom: 0;
      content: "\00a0";
      position: absolute;
      transition: border-bottom-color 200ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
      border-bottom: 1px solid rgba(0, 0, 0, 0.42);
      pointer-events: none;
    }
    &::after {
      left: 0;
      right: 0;
      bottom: 0;
      content: "";
      position: absolute;
      transform: scaleX(0);
      transition: transform 200ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
      border-bottom: 2px solid #1976d2;
      pointer-events: none;
    }
    .mui-input {
      width: 100%;
      border: 0;
      display: block;
      height: 32px;
      line-height: 19px;
      box-sizing: inherit;
      word-spacing: normal;
      padding: 6px 0 7px;
      min-width: 0;
      background: none;
      animation-name: MuiInputBase-keyframes-auto-fill-cancel;
      -webkit-tap-highlight-color: transparent;
    }
  }
}