<view class="mui-avatar" style="width:{{size}}px;height:{{size}}px;background-color:{{background}};color:{{color}};">
  <image wx:if="{{src}}" src="{{src}}" style="width:{{size}}px;height:{{size}}px;"></image>
  <mui-icon wx:elif="{{icon}}" style="display:inline-flex;" name="{{icon}}" size="{{iconSize}}" color="{{color}}"></mui-icon>
  <slot wx:else></slot>
</view>