<view class="mui-avatar" style="width:{{size}}px;height:{{size}}px;background-color:{{background}};color:{{color}};">
  <image wx:if="{{src}}" src="{{src}}" style="width:{{size}}px;height:{{size}}px;" />
  <view wx:elif="{{icon}}" class="mui-avatar-icon" style="width:{{iconSize}}px;height:{{iconSize}}px">
    <mui-icon name="{{icon}}" size="{{iconSize}}" color="{{color}}" />
  </view>
  <slot wx:else></slot>
</view>