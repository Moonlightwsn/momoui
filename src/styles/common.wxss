@import './theme.wxss';

.mui-ripple-base {
  display: inline-flex;
  position: relative;
  cursor: pointer;
}

.mui-ripple-container {
  position: absolute;
  overflow: hidden;
  pointer-events: none;
  top: 0;
  left: 0;
}

.mui-ripple {
  display: inline-block;
  position: absolute;
  opacity: 0;
  border-radius: 100%;
  background-color: rgb(0, 0, 0);
  &.ripple-tap {
    animation: rippleTap 600ms ease;
    animation-fill-mode: forwards;
  }
  &.ripple-longpress {
    animation: rippleLongpress 500ms ease;
    animation-fill-mode: forwards;
  }
  &.ripple-end {
    animation: rippleEnd 100ms ease;
    animation-fill-mode: forwards;
  }
  @keyframes rippleTap {
    from {
      transform: scale(0);
      opacity: 0.3;
    }
    to {
      transform: scale(2);
      opacity: 0;
    }
  }
  
  @keyframes rippleLongpress {
    from {
      transform: scale(0);
      opacity: 0.3;
    }
    to {
      transform: scale(2);
      opacity: 0.3;
    }
  }
  
  @keyframes rippleEnd {
    from {
      transform: scale(2);
      opacity: 0.3;
    }
    to {
      transform: scale(2);
      opacity: 0;
    }
  }
}

.mui-variant-text,.mui-variant-outlined {
  &.mui-color-primary {
    .mui-ripple {
      background-color: #90caf9;
    }
  }
  
  &.mui-color-secondary {
    .mui-ripple {
      background-color: #f48fb1;
    }
  }
}

.mui-variant-contained, .mui-chip.mui-variant-default {
  &.mui-color-primary,&.mui-color-secondary {
    .mui-ripple {
      background-color: rgb(255, 255, 255);
    }
  }
}


[data-momoui-theme=dark] {
  .mui-ripple {
    background-color: rgb(255, 255, 255);
  }
  .mui-variant-text,.mui-variant-outlined {
    &.mui-color-primary {
      .mui-ripple {
        background-color: #90caf9;
      }
    }
    &.mui-color-secondary {
      .mui-ripple {
        background-color: #f48fb1;
      }
    }
  }
  .mui-variant-contained, .mui-chip.mui-variant-default {
    .mui-ripple {
      background-color: rgb(0, 0, 0);
    }
  }
  .mui-chip.mui-variant-default.mui-color-default {
    .mui-ripple {
      background-color: rgb(255, 255, 255);
    }
  }
}