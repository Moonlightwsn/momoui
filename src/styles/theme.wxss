.mui {
  &.mui-color-default {
    color: rgba(0, 0, 0, 0.87);
    background-color: #e0e0e0;
    border-color: rgba(0, 0, 0, 0.23);
  }
  &.mui-color-primary {
    color: #1976d2;
    background-color: #1976d2;
    border-color: #1976d2;
  }
  &.mui-color-secondary {
    color: #dc004e;
    background-color: #dc004e;
    border-color: #dc004e;
  }
  &.mui-variant-contained {
    border: 0;
    color: #fff;
    box-shadow: 0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12);
  }
  &.mui-variant-outlined {
    border-width: 1px;
    border-style: solid;
    background-color: #fff;
    box-shadow: none;
  }
  &.mui-variant-text {
    border: 0;
    border-radius: 0;
    background-color: #fff;
    box-shadow: none;
  }
  &.mui-variant-contained.mui-color-default {
    color: rgba(0, 0, 0, 0.87);
  }
  &.mui-variant-outlined {
    &.mui-color-primary {
      border-color: #1976d280;
    }
    &.mui-color-secondary {
      border-color: #dc004e80;
    }
  }

  /**  mui-button */
  &.mui-button {
    &.mui-size-small {
      padding: 4px 10px;
      font-size: 13px;
      &.mui-variant-outlined {
        padding: 3px 9px;
      }
    }
    &.mui-size-medium {
      padding: 6px 16px;
      &.mui-variant-outlined {
        padding: 5px 15px;
      }
    }
    &.mui-size-large {
      font-size: 15px;
      padding: 8px 22px;
      &.mui-variant-outlined {
        padding: 7px 21px;
      }
    }
    &.mui-button-hover {
      background-color: #0000000a;
      &.mui-color-primary {
        background-color: #1976d20a;
      }
      &.mui-color-secondary {
        background-color: #dc004e0a;
      }
      &.mui-variant-contained {
        box-shadow: 0px 2px 4px -1px rgba(0,0,0,0.2), 0px 4px 5px 0px rgba(0,0,0,0.14), 0px 1px 10px 0px rgba(0,0,0,0.12);
        background-color: #d5d5d5;
        &.mui-color-primary {
          background-color: #115293;
        }
        &.mui-color-secondary {
          background-color: #9a0036;
        }
      }
      &.mui-variant-outlined {
        &.mui-color-primary {
          border-color: #1976d2;
        }
        &.mui-color-secondary {
          border-color: #dc004e;
        }
      }
    }
  } 
  /**  mui-button end */

  &.mui-disabled {
    cursor: default;
    pointer-events: none;
    color: rgba(0, 0, 0, 0.26)!important;
    &.mui-button {
      background-color: transparent;
      &.mui-variant-contained {
        box-shadow: none;
        background-color: rgba(0, 0, 0, 0.12);
      }
      &.mui-variant-outlined {
        border: 1px solid rgba(0, 0, 0, 0.12);
      }
    }
  }
}