<view style="box-sizing: border-box;padding: 12px 6px;background-color: #f5f5f5;height: 100vh;">
  <mui-card>
    <mui-card-header
      avatar-text="M"
      avatar-color="#ffffff"
      avatar-background-color="#1976d2"
      title="MOMO UI"
      subheader="类Material-UI的UI组件库"
      action="hand-like"
      action-color="#dc004e"
    ></mui-card-header>
