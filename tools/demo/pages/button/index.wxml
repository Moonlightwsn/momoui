<view style="box-sizing: border-box;padding: 24px 36px;background-color: #f5f5f5;">
  <mui-typography variant="h6">Button</mui-typography>
  <mui-typography variant="body2" color="textSecondary">
    按钮：可配置不同颜色 大小 类型
  </mui-typography>
  <view style="padding: 24px 0;display: flex;flex-direction: column;justify-content: center;align-items:center;">
    <mui-button color="primary" m-class="button-base">PRIMARY</mui-button>
    <mui-button color="secondary" m-class="button-base">SECONDARY</mui-button>
    <mui-button color="default" m-class="button-base">DEFAULT</mui-button>
    <mui-button color="default" size="small" m-class="button-base" m-style="width:auto;">SMALL</mui-button>
    <mui-button color="default" size="large" m-class="button-base" m-style="width:auto;">LARGE</mui-button>
    <mui-button color="primary" variant="outlined" m-class="button-base">OUTLINED</mui-button>
    <mui-button color="primary" variant="text" m-class="button-base">TEXT</mui-button>
    <mui-button color="primary" disabled="{{true}}" m-class="button-base">DISABLED</mui-button>
    <mui-button color="primary" icon="search" size="small" m-class="button-base" m-style="width: auto;">ICON</mui-button>
    <mui-button-group color="secondary" variant="outlined" size="large" style="margin-bottom: 8px;">
      <mui-button>ONE</mui-button>
      <mui-button>TWO</mui-button>
      <mui-button>THREE</mui-button>
    </mui-button-group>
    <mui-button-group color="secondary" variant="outlined" style="margin-bottom: 8px;">
      <mui-button>ONE</mui-button>
      <mui-button>TWO</mui-button>
      <mui-button>THREE</mui-button>
    </mui-button-group>
    <mui-button-group color="primary" variant="outlined"  size="small" style="margin-bottom: 8px;">
      <mui-button>ONE</mui-button>
      <mui-button>TWO</mui-button>
      <mui-button>THREE</mui-button>
    </mui-button-group>
    <view style="display: flex;justify-content: center;align-items:center;margin: 12px 0;">
      <mui-button color="primary" icon="plus" shape="circle" />
      <mui-button color="primary" variant="text" icon="trash" shape="circle" />
      <mui-button color="secondary" variant="text" icon="like" shape="circle" />
    </view>
  </view>
</view>