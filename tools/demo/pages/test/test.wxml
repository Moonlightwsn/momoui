  <mui-list dense disablePadding>
    <mui-list-item selected divider button>Inbox</mui-list-item>
    <mui-list-item button>Drafts</mui-list-item>
  </mui-list>
  <mui-button-base disabled component="button" centerRipple m-style="width: 140px;height: 42px;">Button Base</mui-button-base>
  <mui-button disabled color="primary" variant="outlined">TEST</mui-button>
  <view style="margin: 20px 0;">
    <mui-button-group variant="outlined">
      <m2-button class="mui-button-wrapper">ONE</m2-button>
      <m2-button class="mui-button-wrapper">TWO</m2-button>
      <m2-button class="mui-button-wrapper">THREE</m2-button>
    </mui-button-group>
  </view>
  <view style="margin: 20px 0;">
    <mui-button-group variant="outlined">
      <mui-button>ONE</mui-button>
      <mui-button>TWO</mui-button>
      <mui-button>THREE</mui-button>
    </mui-button-group>
  </view>
  
  <form bindsubmit="submit" bindreset="reset">
    <mui-input name="mui-input" m-class="input">
      <mui-input-adornment slot="startAdornment" text="Kg" position="start" />
      <mui-input-adornment slot="endAdornment" text="Kg" position="end" />
    </mui-input>
    <mui-input name="mui-textarea" m-class="input">
      <mui-input-adornment slot="startAdornment" position="start">
        <mui-icon name="user" />
      </mui-input-adornment>
      <mui-input-adornment slot="endAdornment" position="end">
        <mui-button shape="circle" variant="text">
          <mui-icon name="send" m-style="font-size: 24px;" />
        </mui-button>
      </mui-input-adornment>
    </mui-input>
    <mui-input multiline m-class="input" name="textarea" />
    <input name="input" />
    <mui-switch name="mui-switch" m-class="input" />
    <mui-checkbox-group name="mui-checkbox" value="{{checkboxValue}}" onChange="{{onCheckboxChange}}" m-class="input">
      <mui-checkbox value="c1" />
      <mui-checkbox value="c2" />
    </mui-checkbox-group>
    <mui-radio-group name="mui-radio" value="{{radioValue}}" onChange="{{onRadioChange}}" m-class="input">
      <mui-radio value="r1" />
      <mui-radio value="r2" />
    </mui-radio-group>
    <mui-button color="primary" form-type="submit">Submit</mui-button>
  </form>
</view>